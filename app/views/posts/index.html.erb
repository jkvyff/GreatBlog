<p id="notice"><%= notice %></p>

<h1>My Posts</h1>

<%= paginate @posts %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date Published</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td>Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago </td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post_url(post.created_at.to_date) + "/#{post.id}" %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @posts %>

