<tr>
  <td><%= post.title %></td>
  <td>Published <%= distance_of_time_in_words(post.created_at, Time.now) %> ago </td>
  <td><%= post.body %></td>
  <td><%= link_to 'Show', post_url(post.created_at.to_date) + "/#{post.id}" %></td>
  <td><%= link_to 'Edit', edit_post_path(post) %></td>
  <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>