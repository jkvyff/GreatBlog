<tr>
  <td><%= post.title %></td>
  <td>Published <%= distance_of_time_in_words(post.created_at, Time.now) %> ago </td>
  <td><%= truncate(post.body, length: 400) %></td>
  <td><%= link_to 'Show', home_path + "/#{post.created_at.to_date}" + "/#{post.id}" %></td>
  <td><%= link_to 'Edit', edit_post_path(post) if current_user.id == post.User_id  %></td>
  <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } if current_user.id == post.User_id  %></td>
</tr>